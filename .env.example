# .env.example - Copia este archivo a .env y ajusta los valores según tu entorno

# Django
DJANGO_SECRET_KEY=tu_clave_secreta_aqui  # Genera una segura con: python -c "import secrets; print(secrets.token_hex(25))"

# Modo de depuración (True para desarrollo, False para producción)
DEBUG=True

# Configuración de MySQL
MYSQL_DATABASE=rifas_db
MYSQL_USER=rifas_user
MYSQL_PASSWORD=rifas_pass  # Cambia esto por una contraseña segura
MYSQL_HOST=db
MYSQL_PORT=3306